<div class="container-fluid">
{{# if products}}
    <div class="row">
        <div class="col-md-6 offset-md-3
     col-lg-6 offset-lg-3 col-sm-6 offset-sm-3">
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <strong>{{this.item.title}} </strong>
                        <span class="label label-success">${{this.price}}</span>
                        <span class="badge badge-dark">{{ this.qty }}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                Action
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Reduce by 1</a> </li>
                                <li><a href="#">Remove All</a> </li>
                            </ul>
                        </div>
                    </li>
                    {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3
     col-lg-6 offset-lg-3 col-sm-6 offset-sm-3">
            <strong>Total: ${{totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-6 offset-md-3
     col-lg-6 offset-lg-3 col-sm-6 offset-sm-3">
            <a  href="/checkout" type="button" class="btn  btn-primary btn-success" >Checkout</a>
        </div>
    </div>
    {{ else }}
    <div class="row">
        <div class="col-md-6 offset-md-3
     col-lg-6 offset-lg-3 col-sm-6 offset-sm-3">
            <h2>No Items In Cart</h2>
        </div>
    </div>
{{/if}}
</div>
