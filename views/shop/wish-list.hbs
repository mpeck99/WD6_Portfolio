<div class="container wish-list">
    {{# if products}}
    <h1>Your Wishlist!</h1>
    <div class="row">
        {{# each products }}
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card product">
                    <img class="card-img-top image-responsive" src={{ this.item.imagePath }} alt="{{this.item.title}}">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.item.title }}</h5>
                        <p class="card-text product-info">{{ this.item.description }}</p>
                        <div>
                            <div class="price float-left">${{ this.item.price }}</div>
                            <a href="/remove-wishlist/{{this.item._id}}" class="btn btn-primary float-right addCart"><i class="far fa-trash-alt"></i></a>
                            <a href="/add-to-cart/{{this.item._id}}" class="btn btn-primary float-right addCart">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    {{else}}
        <div class="row">
            <div class="col-md-6 offset-md-3
     col-lg-6 offset-lg-3 col-sm-6 offset-sm-3">
                <h2>Your Wishlist is empty!</h2>
            </div>
        </div>
    {{/if}}
</div>